<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbdbdb"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:id="@+id/toolbar"
        android:theme="@style/AppTheme.DarkAppBar"/>

    <TextView
          android:layout_marginTop="20dp"
          android:textSize="20dp"
          android:gravity="center"
          android:text="Select a Topic for Quiz"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_gravity="center"
            android:padding="20dp"
            android:rowCount="3"
            android:columnCount="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            
           
             <!--First Row-->

        <androidx.cardview.widget.CardView
            android:layout_marginRight="40dp"
            android:layout_gravity="right"
            android:layout_width="130dp"
            android:layout_height="135dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:id="@+id/historylayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/history"
                android:layout_width="100dp"
                android:layout_height="100dp"
             />
            <View
                android:background="@color/colorAsh"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
              
                style="@style/topic_textview"
                android:text="History"
                />



            </LinearLayout>

         </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="left"
            android:layout_width="130dp"
            android:layout_height="135dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="10dp">>

            <LinearLayout
                android:id="@+id/geographylayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/geography"
                android:layout_width="100dp"
                android:layout_height="100dp"
             />
            <View
                android:background="@color/colorAsh"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
               
                style="@style/topic_textview"
                android:text="Geography"
                />



            </LinearLayout>

         </androidx.cardview.widget.CardView>

            <!--Second Row-->

        <androidx.cardview.widget.CardView
            android:layout_marginRight="40dp"
            android:layout_gravity="right"
            android:layout_width="130dp"
            android:layout_height="135dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
            

            <LinearLayout
                android:id="@+id/spacelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/space"
                android:layout_width="100dp"
                android:layout_height="100dp"
             />
            <View
                android:background="@color/colorAsh"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                
                style="@style/topic_textview"
                android:text="Space"
               />



            </LinearLayout>

         </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="left"
            android:layout_width="130dp"
            android:layout_height="135dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">>

            <LinearLayout
                android:id="@+id/engineeringlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/engineering"
                android:layout_width="100dp"
                android:layout_height="100dp"
             />
            <View
                android:background="@color/colorAsh"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
            
            
                style="@style/topic_textview"
                android:text="Engineering"
               />



            </LinearLayout>

         </androidx.cardview.widget.CardView>


                <!--Third Row-->

        <androidx.cardview.widget.CardView
            android:layout_marginRight="40dp"
            android:layout_gravity="right"
            android:layout_width="130dp"
            android:layout_height="135dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
            

            <LinearLayout
                android:id="@+id/programinglayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/programming"
                android:layout_width="100dp"
                android:layout_height="100dp"
             />
            <View
                android:background="@color/colorAsh"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
              
                style="@style/topic_textview"
                android:text="Programming"/>
              



            </LinearLayout>

         </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="left"
            android:layout_width="130dp"
            android:layout_height="135dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">>

            <LinearLayout
                android:id="@+id/businesslayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/business"
                android:layout_width="100dp"
                android:layout_height="100dp"
             />
            <View
                android:background="@color/colorAsh"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                
                style="@style/topic_textview"
                android:text="Business"
               />



            </LinearLayout>

         </androidx.cardview.widget.CardView>

        </GridLayout>
    </ScrollView>
</LinearLayout>