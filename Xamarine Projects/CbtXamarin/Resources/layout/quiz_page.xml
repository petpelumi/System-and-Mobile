<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:id="@+id/quiz_toolbar"
        android:theme="@style/AppTheme.DarkAppBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
       >

    <TextView
        android:id="@+id/timeCounter_textView"
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:text="1:30"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical">
    <TextView
       
        android:id="@+id/quizPosition_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"      
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="20dp"
        android:text="Question 1/6"/>

    <TextView
       
        android:id="@+id/quizQuestionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"      
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:text="These are the questions for the quiz"/>

            
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

    <RadioButton
         android:checked="false"
        android:id="@+id/optionA_btn"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        
        android:id="@+id/optionA_textview"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="An overdraft"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

    <RadioButton
         android:checked="false"
        android:id="@+id/optionB_btn"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        
        android:id="@+id/optionB_textview"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A loan from a bank"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

    <RadioButton
         android:checked="false"
        android:id="@+id/optionC_btn"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        
        android:id="@+id/optionC_textview"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selling Assets"/>

        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

    <RadioButton
        android:checked="false"
        android:id="@+id/optionD_btn"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        
        android:id="@+id/optionD_textview"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A stock market flunctuation"/>
        
    </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_weight="0.15">

    <Button
        android:id="@+id/buttonProceed"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="@drawable/roundbutton"
        android:layout_marginBottom="40dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAllCaps="false"
        android:text="Proceed"
        android:layout_width="100dp"
        android:layout_height="45dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
